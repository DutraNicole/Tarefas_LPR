//EXERCÍCIO-1
#include <iostream>
using namespace std;

int main()
{
    int num;
    int result;
    
    cout<<"Digite um número inteiro: ";
    cin >> num;
    
    result = num % 2;
    
    if (result == 0)
    {
      cout<<"O número digitado é PAR";  
    }
    else 
    {
        cout<<"O número digitado é ÍMPAR";
    }
    return 0;
}

//EXERCÍCIO-2
using System;
class HelloWorld {
  static void Main() {
      
    int result_01;
    int result_02;
    Console.WriteLine("Digite dois números: ");
    int A = int.Parse(Console.ReadLine());
    int B = int.Parse(Console.ReadLine());
   
    result_01 = A % B;
    result_02= B % A;
   
   if (result_01 == 0 || result_02 == 0)
   {
       Console.WriteLine("Os números {0} e {1}, são multiplos! ", A, B);
   }
   else 
  {
      Console.WriteLine("Os números {0} e {1}, não são multiplos!", A,B);
  }
  }
}

//EXERCÍCIO-3
#include <iostream>
using namespace std;
int main()
{
    int num;
    cout<<"Selecione uma classe que você queira: "<<endl;
    cout<<"1 - GUERREIRA"<<endl;
    cout<<"2 - MAGO"<<endl;
    cout<<"3 - ARQUEIRA"<<endl;
    cin>>num;
    
    if (num == 1)
    {
        cout<<"Você escolheu a classe GUERREIRA."<<endl;
        cout<<"Essas são suas habilidades especiais: Ataque Pesado, Defesa Total."<<endl;
    }
    else if (num == 2)
    {
        cout<<"Você escolheu a classe MAGO."<<endl;
        cout<<"Essas são suas habilidades especiais: Bola de Fogo, Escudo de Gelo."<<endl;  
    }
    else if (num == 3)
    {
        cout<<"Você escolheu a classe ARQUEIRA."<<endl;
        cout<<"Essas são suas habilidades especiais: Flecha Precisa, Disparo Triplo."<<endl;     
    }
    else 
    {
        cout<<"Número inválido!";
    }
    return 0;
}
